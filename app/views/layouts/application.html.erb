<!DOCTYPE html>
<html>
  <head>
    <title>Blocipedia</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-default">
        <div class="container">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Blocipedia <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Home", root_path %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "About", about_path %></li>
                <li><%= link_to "FAQ", faq_path %></li>
                <li><%= link_to "Contact", contact_path %></li>
              </ul>
            </li>
            <li><%= link_to "Wikis", wikis_path %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= user_signed_in? ? current_user.name : "Guest User" %> <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <% if user_signed_in? %>
                  <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
                <% else %>
                  <li><%= link_to "Sign In", new_user_session_path %></li>
                  <li role="separator" class="divider"></li>
                  <li><%= link_to "Sign Up!" %></li>
                <% end %>
              </ul>
            </li>
          </ul>
        </div>
      </nav>
    </header>
    <div class="container">
      <% if notice || params[:notice] %>
        <p class="notice" id="noticeDiv"><%= notice || params[:notice] %></p>
      <% end %>
      <% if notice || params[:notice] %>
        <p class="alert" id="alertDiv"><%= alert || params[:alert] %></p>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
