<h2>Edit Wiki <%= @wiki.title %></h2>
<% if policy(@wiki).edit? %>
  <%= form_for @wiki do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "Title" %>
    <br>
    <%= f.label :body %>
    <%= f.text_area :body, rows: 6, columns: 50, placeholder: "Body" %>
    <br>
    <%= f.label :private %>
    <%= f.check_box :private %>
    <br>
    <%= f.submit "Update Wiki" %>
  <% end %>
<% else %>
 <em>You are not authorized to edit this wiki!</em>
<% end %>
